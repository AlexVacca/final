<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Duration</th>
      <th>Stard</th>
      <th>Endd</th>
      <th>User</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 
   <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tittle %></td>
        <td><%= task.duration %></td>
        <td><%= task.stard %></td>
        <td><%= task.endd %></td>
        <td><%= task.user.name %></td>
        <td><%= task.finished %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
